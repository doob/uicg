---
/**
 * Alert Component - WCAG AA Compliant
 *
 * This component meets WCAG 2.1 AA accessibility standards:
 * - Minimum 4.5:1 contrast ratio for normal text
 * - Minimum 3:1 contrast ratio for large text
 * - Proper ARIA attributes and roles
 * - Keyboard navigation support
 * - Screen reader compatibility
 */
import type { HTMLAttributes } from 'astro/types'
import { cva, type VariantProps } from 'class-variance-authority'
import { twMerge } from 'tailwind-merge'

export interface AlertProps extends HTMLAttributes<'div'>, VariantProps<typeof alertVariants> {
  dismissible?: boolean
  icon?: boolean
}

const alertVariants = cva('relative rounded-lg border transition-all duration-200 ease-in-out animate-in fade-in-0 slide-in-from-bottom-2', {
  variants: {
    variant: {
      default: 'bg-background text-foreground border-border',
      filled: '',
      outlined: 'bg-transparent border-2',
      subtle: 'border-transparent',
    },
    intent: {
      info: '',
      success: '',
      warning: '',
      danger: '',
    },
    size: {
      sm: 'p-3 text-sm',
      md: 'p-4 text-base',
      lg: 'p-5 text-lg',
    },
  },
  compoundVariants: [
    // Info variants - WCAG AA compliant (4.5:1+ contrast)
    {
      intent: 'info',
      variant: 'default',
      className: 'bg-blue-50 text-blue-950 border-blue-200 dark:bg-blue-950/30 dark:text-blue-100 dark:border-blue-700/50',
    },
    {
      intent: 'info',
      variant: 'filled',
      className: 'bg-blue-600 text-white border-blue-700 dark:bg-blue-700 dark:border-blue-600',
    },
    {
      intent: 'info',
      variant: 'outlined',
      className: 'text-blue-800 border-blue-300 bg-transparent dark:text-blue-200 dark:border-blue-600',
    },
    {
      intent: 'info',
      variant: 'subtle',
      className: 'bg-blue-50/70 text-blue-900 dark:bg-blue-950/20 dark:text-blue-100',
    },
    // Success variants - WCAG AA compliant
    {
      intent: 'success',
      variant: 'default',
      className: 'bg-green-50 text-green-950 border-green-200 dark:bg-green-950/30 dark:text-green-100 dark:border-green-700/50',
    },
    {
      intent: 'success',
      variant: 'filled',
      className: 'bg-green-600 text-white border-green-700 dark:bg-green-700 dark:border-green-600',
    },
    {
      intent: 'success',
      variant: 'outlined',
      className: 'text-green-800 border-green-300 bg-transparent dark:text-green-200 dark:border-green-600',
    },
    {
      intent: 'success',
      variant: 'subtle',
      className: 'bg-green-50/70 text-green-900 dark:bg-green-950/20 dark:text-green-100',
    },
    // Warning variants - WCAG AA compliant (improved yellow contrast)
    {
      intent: 'warning',
      variant: 'default',
      className: 'bg-amber-50 text-amber-950 border-amber-200 dark:bg-amber-950/30 dark:text-amber-100 dark:border-amber-700/50',
    },
    {
      intent: 'warning',
      variant: 'filled',
      className: 'bg-amber-600 text-white border-amber-700 dark:bg-amber-700 dark:border-amber-600',
    },
    {
      intent: 'warning',
      variant: 'outlined',
      className: 'text-amber-800 border-amber-300 bg-transparent dark:text-amber-200 dark:border-amber-600',
    },
    {
      intent: 'warning',
      variant: 'subtle',
      className: 'bg-amber-50/70 text-amber-900 dark:bg-amber-950/20 dark:text-amber-100',
    },
    // Danger variants - WCAG AA compliant
    {
      intent: 'danger',
      variant: 'default',
      className: 'bg-red-50 text-red-950 border-red-200 dark:bg-red-950/30 dark:text-red-100 dark:border-red-700/50',
    },
    {
      intent: 'danger',
      variant: 'filled',
      className: 'bg-red-600 text-white border-red-700 dark:bg-red-700 dark:border-red-600',
    },
    {
      intent: 'danger',
      variant: 'outlined',
      className: 'text-red-800 border-red-300 bg-transparent dark:text-red-200 dark:border-red-600',
    },
    {
      intent: 'danger',
      variant: 'subtle',
      className: 'bg-red-50/70 text-red-900 dark:bg-red-950/20 dark:text-red-100',
    },
  ],
  defaultVariants: {
    variant: 'default',
    intent: 'info',
    size: 'md',
  },
})

const { variant = 'default', intent = 'info', size = 'md', dismissible = false, icon = true, class: additionalClasses = '', ...rest } = Astro.props as AlertProps

// Default icons for each intent - WCAG compliant with proper ARIA attributes
const defaultIcons = {
  info: `<svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
    <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a.75.75 0 000 1.5h.253a.25.25 0 01.244.304l-.459 2.066A1.75 1.75 0 0010.747 15H11a.75.75 0 000-1.5h-.253a.25.25 0 01-.244-.304l.459-2.066A1.75 1.75 0 009.253 9H9z" clip-rule="evenodd" />
  </svg>`,
  success: `<svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.236 4.53L8.93 10.7a.75.75 0 00-1.06 1.061l1.25 1.25a.75.75 0 001.137-.089l3.75-5.25z" clip-rule="evenodd" />
  </svg>`,
  warning: `<svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
    <path fill-rule="evenodd" d="M8.485 2.495c.673-1.167 2.357-1.167 3.03 0l6.28 10.875c.673 1.167-.17 2.625-1.516 2.625H3.72c-1.347 0-2.189-1.458-1.515-2.625L8.485 2.495zM10 5a.75.75 0 01.75.75v3.5a.75.75 0 01-1.5 0v-3.5A.75.75 0 0110 5zm0 9a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd" />
  </svg>`,
  danger: `<svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.28 7.22a.75.75 0 00-1.06 1.06L8.94 10l-1.72 1.72a.75.75 0 101.06 1.06L10 11.06l1.72 1.72a.75.75 0 101.06-1.06L11.06 10l1.72-1.72a.75.75 0 00-1.06-1.06L10 8.94 8.28 7.22z" clip-rule="evenodd" />
  </svg>`,
}

const alertId = `alert-${Math.random().toString(36).substring(2, 9)}`
---

<div id={alertId} class={twMerge(alertVariants({ variant, intent, size }), additionalClasses)} role="alert" {...rest}>
  <div class="flex items-start gap-3">
    <!-- Icon Section -->
    <div class="flex-shrink-0 pt-0.5">
      <slot name="icon">
        {icon && <div set:html={defaultIcons[intent]} />}
      </slot>
    </div>

    <!-- Content Section -->
    <div class="min-w-0 flex-1">
      <!-- Title -->
      <div class="font-semibold leading-tight">
        <slot />
      </div>

      <!-- Description -->
      <slot name="description">
        <div class="mt-1 text-sm opacity-90">
          <slot name="content" />
        </div>
      </slot>
    </div>

    <!-- Action Section -->
    <div class="flex flex-shrink-0 items-start gap-2">
      <slot name="action" />

      <!-- Dismiss Button -->
      {
        dismissible && (
          <button
            type="button"
            class="inline-flex rounded-md p-1.5 transition-colors hover:bg-black/10 focus:outline-none focus:ring-2 focus:ring-current focus:ring-offset-2 focus:ring-offset-transparent active:bg-black/15 dark:hover:bg-white/10 dark:active:bg-white/15"
            onclick={`document.getElementById('${alertId}').style.display = 'none'`}
            aria-label="Dismiss alert"
          >
            <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
              <path d="M6.28 5.22a.75.75 0 00-1.06 1.06L8.94 10l-3.72 3.72a.75.75 0 101.06 1.06L10 11.06l3.72 3.72a.75.75 0 101.06-1.06L11.06 10l3.72-3.72a.75.75 0 00-1.06-1.06L10 8.94 6.28 5.22z" />
            </svg>
          </button>
        )
      }
    </div>
  </div>
</div>

<style>
  @keyframes fade-in {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  @keyframes slide-in-from-bottom {
    from {
      transform: translateY(0.5rem);
    }
    to {
      transform: translateY(0);
    }
  }

  .animate-in {
    animation:
      fade-in 0.2s ease-out,
      slide-in-from-bottom 0.2s ease-out;
  }

  .fade-in-0 {
    animation-fill-mode: both;
  }

  .slide-in-from-bottom-2 {
    animation-fill-mode: both;
  }
</style>
